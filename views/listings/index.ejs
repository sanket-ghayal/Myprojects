<% layout("/layouts/boilerplate") %>

<style>
  /* Filters styling */
  .filters {
    display: flex;
    gap: 65px;
    overflow-x: auto;
    background-color: white;
    padding: 25px 20px;
  }

  .filter {
    text-align: center;
    text-decoration: none;
    color: #717171;
    padding-bottom: 8px;
  }

  .filter i {
    font-size: 22px;
  }

  .filter.active {
    color: #000;
    border-bottom: 2px solid black;
  }

  .filter:hover {
    color: #000;
  }

  /* Sticky for desktop only */
  @media (min-width: 768px) {
    .filters {
      position: sticky;
      top: 70px;
      z-index: 1000;
    }

    .row {
      margin-top: 0;
    }
  }

  /* Scroll normally on mobile */
  @media (max-width: 767px) {
    .filters {
      position: relative;
    }
  }
</style>

<!-- Filters Bar -->
<div class="filters">

  <a href="/listings" class="filter <%= !category ? 'active' : '' %>">
    <i class="fa-solid fa-border-all"></i>
    <span>All</span>
  </a>

  <a href="/listings?category=beach" class="filter <%= category === 'beach' ? 'active' : '' %>">
    <i class="fa-solid fa-umbrella-beach"></i>
    <span>Beach</span>
  </a>

  <a href="/listings?category=iconic" class="filter <%= category === 'iconic' ? 'active' : '' %>">
    <i class="fa-solid fa-city"></i>
    <span>Iconic Cities</span>
  </a>

  <a href="/listings?category=mountains" class="filter <%= category === 'mountains' ? 'active' : '' %>">
    <i class="fa-solid fa-mountain"></i>
    <span>Mountains</span>
  </a>

  <a href="/listings?category=castles" class="filter <%= category === 'castles' ? 'active' : '' %>">
    <i class="fa-solid fa-chess-rook"></i>
    <span>Castles</span>
  </a>

  <a href="/listings?category=pools" class="filter <%= category === 'pools' ? 'active' : '' %>">
    <i class="fa-solid fa-water-ladder"></i>
    <span>Pools</span>
  </a>

  <a href="/listings?category=camping" class="filter <%= category === 'camping' ? 'active' : '' %>">
    <i class="fa-solid fa-campground"></i>
    <span>Camping</span>
  </a>

  <a href="/listings?category=farms" class="filter <%= category === 'farms' ? 'active' : '' %>">
    <i class="fa-solid fa-tractor"></i>
    <span>Farms</span>
  </a>

  <a href="/listings?category=arctic" class="filter <%= category === 'arctic' ? 'active' : '' %>">
    <i class="fa-regular fa-snowflake"></i>
    <span>Arctic</span>
  </a>

  <a href="/listings?category=domes" class="filter <%= category === 'domes' ? 'active' : '' %>">
    <i class="fa-solid fa-igloo"></i>
    <span>Domes</span>
  </a>

</div>

<!-- Listings Grid -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% if (allListings.length > 0) { %>
    <% for (let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br />
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
              <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  <% } else { %>
    <div class="text-center py-5">
      <h4>
        No listings found
        <% if (typeof query !== "undefined" && query) { %>
          for "<%= query %>"
        <% } %>.
      </h4>
    </div>
  <% } %>
</div>
